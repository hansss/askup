<div class="prettyform">
  <div class="container" id="new-password">
    <div class="box maxwidth-box">
      <h2 class="fixed-title center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="center">
          <%= f.email_field :email, autofocus: true, class: "center-form form-control", placeholder: "Email" %>
        </div>

        <div class="center user-link">
          <%= f.submit "Reset password", class: 'btn btn-theme' %>
        </div>

      <% end %>

      <div class="center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>